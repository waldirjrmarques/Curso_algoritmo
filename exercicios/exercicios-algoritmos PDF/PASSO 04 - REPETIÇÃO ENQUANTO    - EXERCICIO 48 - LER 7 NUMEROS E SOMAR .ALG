Algoritmo "PASSO 04 - REPETIÇÃO ENQUANTO    - EXERCICIO 48 - LER 7 NUMEROS E SOMAR "

Var
   CONTADOR , NUMERO , SOMA: INTEIRO
Inicio
   CONTADOR <- 1

   ENQUANTO CONTADOR <= 7 FACA
      ESCREVA ("DIGITE O ",CONTADOR,"° NUMERO:")
      LEIA (NUMERO)

      CONTADOR <- CONTADOR + 1
      SOMA <- SOMA + NUMERO
   FIMENQUANTO

   ESCREVA ("A SOMA DOS 7 NUMEROS DIGITADOS É",SOMA)

Fimalgoritmo